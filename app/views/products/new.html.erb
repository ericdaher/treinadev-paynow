<h1>Criar Produto</h1>

<% @product.errors.each do |error| %>
  <span><%= error.full_message %></span><br>
<% end %>

<%= form_with model: @product do |form| %>

  <%= form.label :name, 'Nome' %>
  <%= form.text_field :name %>
  
  <%= form.label :price, 'Preço' %>
  <%= form.number_field :price %>

  <%= form.label :discount_credit, 'Desconto para cartão (%)' %>
  <%= form.number_field :discount_credit %>

  <%= form.label :discount_ticket, 'Desconto para boleto (%)' %>
  <%= form.number_field :discount_ticket %>

  <%= form.label :discount_pix, 'Desconto para PIX (%)' %>
  <%= form.number_field :discount_pix %>

  <%= form.submit 'Criar Produto' %>
<% end %>